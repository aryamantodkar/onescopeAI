{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist/worker",
    "noEmit": false,
    "verbatimModuleSyntax": false
  },
  "include": ["worker/**/*"]
}