{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist/server/worker",
    "noEmit": false,
    "verbatimModuleSyntax": false
  },
  "include": ["src/server/worker/**/*", "src/env.ts", "src/server/db/**/*"]
}